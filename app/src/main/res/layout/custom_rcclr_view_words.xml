<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_alignTop="@+id/tv_c_rcclr_view_words_id"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_c_rcclr_view_words_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ident"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:textSize="8dp" />


        <TextView
            android:id="@+id/tv_c_rcclr_view_words_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:textSize="32dp"
            tools:text="opa" />

        <CheckBox
            android:id="@+id/is_archived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>


    </FrameLayout>

    <TextView
        android:id="@+id/tv_c_rcclr_view_words_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="?attr/colorControlActivated"
        android:text="translation"
        android:textSize="24dp" />

</LinearLayout>


