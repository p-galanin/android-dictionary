<?xml version="1.0" encoding="utf-8"?>
<com.halo.dictionary.mvp.ui.rcclrview.WordsRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_c_rcclr_view_words_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="ident"
        android:textAlignment="textEnd"
        android:textSize="8dp"/>

    <TextView
        android:id="@+id/tv_c_rcclr_view_words_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        tools:text="opa"
        android:layout_alignTop="@+id/tv_c_rcclr_view_words_id"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_c_rcclr_view_words_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorControlActivated"
        android:textSize="24dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/tv_c_rcclr_view_words_word"
        android:layout_alignParentStart="true"/>

</com.halo.dictionary.mvp.ui.rcclrview.WordsRelativeLayout>


